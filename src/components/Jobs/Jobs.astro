        @include mixins.flipdisp;
        margin-bottom: 80px;

        & p,
        ul {
            font-size: 15px;
            color: #111;
            font-weight: 300;
            line-height: 1.3;
        }

        & a:hover {
            color: #162e51;
            text-decoration: underline;
        }
    }
</style>
