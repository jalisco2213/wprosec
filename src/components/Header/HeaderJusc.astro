    }

    @media (max-width: 768px) {
        .jusc-sec_cont {
            background: none;
        }

        .nav {
            display: none;
        }

        .menu {
            display: block;
        }

        .nav-link {
            display: block;
            & button {
                font-size: 16px;
                color: white;
                padding: 1.41rem 0;
                background-color: inherit;
                cursor: pointer;

                & a {
                    width: 100%;

                    &:hover {
                        background: none;
                        color: white;
                    }
                }
            }
        }

        .navbar a:hover,
        .dropdown:hover .dropbtn {
            background-color: inherit;
            color: #fff;
        }

        .dropdown:not(:last-child) {
