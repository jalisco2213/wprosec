    }

    .navbar a:hover,
    .dropdown:hover .dropbtn {
        background-color: #ffbe2e;
        color: #000000;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;

        & a {
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;

            &:hover {
                background-color: #ddd;
            }
        }
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .menu {
        display: none;
        z-index: 10;
        position: absolute;
        background: #2e2e2a;
        display: flex;
        justify-content: flex-end;
