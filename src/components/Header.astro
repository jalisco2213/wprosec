---
import SearchSVG from "./svg/SearchSVG.astro";
---

<div class="container jusc-container">
    <div class="reg-header">
        <div class="nav-just">
            <div class="usa-logo">
                <a href="/">
                    <img
                        src="/logo.svg"
                        alt=""
                        style="width: 18.75rem; height: 6.25rem"
                    />
                </a>
            </div>
            <div class="usa-place">
                <ul class="usa-place_menu">
                    <li>
                        <a
                            href="https://forum.arizona-rp.com/threads/4712079/"
                            target="_blank">Фед.закон</a
                        >
                    </li>
                    <li>
                        <a
                            href="https://forum.arizona-rp.com/threads/4602187/"
                            target="_blank">Попросить помощи</a
                        >
                    </li>
                </ul>
                <form class="usa-search">
                    <input class="usa-search_input" placeholder="Искать..." />
                    <button>
                        <SearchSVG />
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="jusc-sec_cont">
        <nav class="nav">
            <div class="nav-link">
                <a href="/">Главная</a>
                <div class="dropdown">
                    <button class="dropbtn"
                        >О нас
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content">
                        <a href="/management">Государственный прокурор</a>
                        <a href="/structure">Организационная структура</a>
                    </div>
                </div>
                <a href="/missions"> Наша миссия</a>
                <div class="dropdown">
                    <button class="dropbtn"
                        >Законодательство
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content">
                        <a
                            href="https://forum.arizona-rp.com/threads/4712079/"
                            target="_blank">Закон "О прокуратуре"</a
                        >
                        <a
                            href="https://forum.arizona-rp.com/threads/5967642/"
                            target="_blank">Конституция</a
                        >
                        <a
                            href="https://forum.arizona-rp.com/threads/4712105/"
                            target="_blank"
                            >Уголовный и административный кодексы</a
                        >
                        <a
                            href="https://forum.arizona-rp.com/threads/5089213/"
                            target="_blank">Трудовой кодекс</a
                        >
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn"
                        >Карьера
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content">
                        <a
                            href="https://forum.arizona-rp.com/threads/4712079/"
                            target="_blank">Закон "О прокуратуре"</a
                        >
                        <a
                            href="https://forum.arizona-rp.com/threads/5967642/"
                            target="_blank">Конституция</a
                        >
                        <a
                            href="https://forum.arizona-rp.com/threads/4712105/"
                            target="_blank"
                            >Уголовный и административный кодексы</a
                        >
                        <a
                            href="https://forum.arizona-rp.com/threads/5089213/"
                            target="_blank">Трудовой кодекс</a
                        >
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>

<style lang="scss" is:global>
    @use "/src/assets/mixin" as mixins;

    .nav-just,
    .nav {
        @include mixins.flipdisp;
    }

    .reg-header {
        background: #162e51;
        border-bottom: #ffbe2e 3px solid;
    }

    .nav-just {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 8rem;
    }

    .fa {
        margin-left: 3px;
    }

    .usa-place {
        &_menu {
            display: flex;
            margin-bottom: 10px;

            & li {
                padding-right: 10px;
                margin-right: 10px;
                font-size: 0.8rem;

                &:not(:last-child) {
                    border-right: 0.5px solid #6a798f;
                }

                &:hover {
                    color: #ffd700;
                    text-decoration: underline;
                }
            }
        }
    }

    .usa-search {
        display: flex;
        margin: auto;

        &_input {
            display: block;
            margin: 0 auto;
            padding-left: 0.3rem;
            border: 1px solid white;
            border-top-left-radius: 0.25rem;
            border-bottom-left-radius: 0.25rem;
            width: 100%;
            height: 2rem;
            font-size: 1rem;
        }

        & button {
            background: #ffbe2e;
            width: 2rem;
            cursor: pointer;
            border-bottom-left-radius: 0;
            border-top-left-radius: 0;
            border-top-right-radius: 0.25rem;
            border-bottom-right-radius: 0.25rem;
            transition: 0.3s ease;

            &:hover {
                background: #ffbe8e;
                transition: 0.3s ease;
            }
        }
    }

    .jusc-sec_cont {
        background: #2e2e2a;
    }

    .nav {
        &-link {
            display: flex;
            align-items: center;

            & a {
                font-size: 1rem;
                font-weight: 400;
                padding: 1.5rem;
                color: #eee;
                background: inherit;
                cursor: pointer;

                &:hover {
                    background: #ffbe2e;
                    color: black;
                }
            }
        }
    }

    .dropdown .dropbtn {
        font-size: 16px;
        color: white;
        padding: 1.41rem;
        background-color: inherit;
        cursor: pointer;
    }

    .navbar a:hover,
    .dropdown:hover .dropbtn {
        background-color: #ffbe2e;
        color: #000000;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .dropdown-content a {
        float: none;
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
    }

    .dropdown-content a:hover {
        background-color: #ddd;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>
