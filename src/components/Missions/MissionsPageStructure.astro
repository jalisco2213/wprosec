---
import LineSVG from "../svg/LineSVG.astro";
---

<div class="structure-container">
    <div class="structure-info">
        <h2>Организационная структура</h2>
        <LineSVG />
        <div class="structure-card">
            <img
                src="/iera.png"
                alt="iera"
                style="width: 23rem; height: 21.875rem;"
            />
            <div class="structure-card_info">
                <div class="field-item_info">
                    <h3>Компоненты и агентства Прокуратуры</h3>
                    <p>
                        Прокуратура состоит из нескольких компонентов и
                        агентств, занимающихся выполнением нашей миссии.
                    </p>
                </div>
                <div class="scheme">
                    <a href="">
                        <span>Посмотреть организационную схему</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style scoped lang="scss">
    @use "/src/assets/mixin" as mixins;

    .structure-container {
        margin-top: 6.25rem;
        padding-bottom: 6.25rem;
        background: #ecf1f7;
    }

    .structure-info {
        @include mixins.flipdisp;
    }

    .structure-card {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        margin: 0 auto;
        background: white;
        width: 60rem;
        box-shadow: 0px 5px 10px 3px rgba(0, 0, 0, 0.5);
    }

    .scheme {
        margin: 1.3rem 0;
        width: 20rem;
        height: 2.5rem;
        border-radius: 3px;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #162e51;
        text-align: center;
        cursor: pointer;

        &:hover {
            background: #005ea2;
        }

        & span {
            font-weight: 700;
        }
    }

    .field-item_info {
        width: 500px;

        & h3 {
            font-weight: 500;
            margin-top: 0.6rem;
            margin-bottom: 0.8rem;
            font-size: 1.25rem;
            font-weight: bold;
            color: #07648d;
            line-height: 1;
        }

        & p {
            color: #666;
            line-height: 1.3;
            font-weight: 300;
        }
    }
</style>
